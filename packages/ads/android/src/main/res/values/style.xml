<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="premium_button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ad_premium_button_background</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:text">@string/premium_user</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>